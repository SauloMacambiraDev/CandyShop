@model Order

<form asp-action="Checkout" method="POST" class="form-horizontal" role="form">
    <h4>You're one step away from ordering awesome candy</h4>

    @*If any errors were caught by Model Validation process in ASP NET CORE,
    all the errors will be added into asp-validation-summary div element.*@
    <div asp-validation-summary="All" style="color: tomato;"></div>

    <div class="form-group">
        <label asp-for="FirstName" class="col-md-2 custom-control-label"></label>
        <div class="col-md-5">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" style="color: tomato;"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="col-md-2 custom-control-label"></label>
        <div class="col-md-5">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" style="color: tomato;"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Address" class="col-md-2 custom-control-label"></label>
        <div class="col-md-5">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" style="color: tomato;"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="City" class="col-md-2 custom-control-label"></label>
        <div class="col-md-5">
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" style="color: tomato;"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="State" class="col-md-2 custom-control-label"></label>
        <div class="col-md-5">
            <input asp-for="State" class="form-control" />
            <span asp-validation-for="State" style="color: tomato;"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ZipCode" class="col-md-2 custom-control-label"></label>
        <div class="col-md-5">
            <input asp-for="ZipCode" class="form-control" />
            <span asp-validation-for="ZipCode" style="color: tomato;"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-md-2 custom-control-label"></label>
        <div class="col-md-5">
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" style="color: tomato;"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Complete Order" /> 
        </div>
    </div>

</form>