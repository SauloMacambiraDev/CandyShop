@model IEnumerable<Category>

<li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown">Categories</a>
    <ul class="dropdown-menu">
        @foreach(var category in Model)
            {
                <li>
                    <a asp-controller="Candy" asp-action="Index" asp-route-category="@category.CategoryName">@category.CategoryName</a>
                </li>
            }
        <li class="dropdown-divider"></li>
        <li>
            <a asp-controller="Candy" asp-action="Index" asp-route-category="">View all candy</a>
        </li>
    </ul>
</li>